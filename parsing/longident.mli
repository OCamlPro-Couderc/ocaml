(* Long identifiers, used in parsetree. *)

type t =
    Lident of string
  | Ldot of t * string
  | Lapply of t * t

val flatten: t -> string list
val first: t -> string
val last: t -> string
val parse: string -> t
val string_of_longident: t -> string
val optstring: t option -> string option
val from_optstring: string option -> t option
